  <body>

    <nav class="navbar border-bottom shadow-sm">
      <div class="container justify-content-center">
        <a class="navbar-brand header" id="home-page-nav-header">Filmography Tracker</a>
        <a id="home-page-watchlist-link" href="/movies">Priority Watchlist</a>
    </nav>

    <div class="row">
      <div class="col-md-6 offset-md-3">
        <form action="/" method="POST">
          <div class="button-container text-center">
            <input type="hidden" name="director", value="<%= director %>">
            <button type="submit" class="btn btn-primary">Submit Films</button>
          </div>
          <div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Year</th>
                  <th scope="col">Title</th>
                  <th scope="col">Runtime</th>
                  <th scope="col">Add</th>
                </tr>
              </thead>
              <tbody>
                <% films.forEach((film) => { %>
                  <tr>
                    <% const idName = film.title + "-id" %>
                    <% const titleName = film.title + "-title" %>
                    <% const releaseDateName = film.title + "-releaseDate" %>
                    <% const addName = film.title + "-add" %>
                    <% const runtimeName = film.title + "-runtime" %>
                    <th scope="row"><%= film.releaseDate %></th>
                    <td><%= film.title %></td>
                    <td><%= film.runtime %></td>
                    <td>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="add" name="<%= addName %>" id="flexCheckChecked" checked>
                        <label class="form-check-label" for="flexCheckChecked">
                          Uncheck to not add
                        </label>
                      </div>
                    </td>
                    <input type="hidden" name="<%= idName %>" value="<%= film.id %>">
                    <input type="hidden" name="<%= titleName %>" value="<%= film.title %>">
                    <input type="hidden" name="<%= releaseDateName %>" value="<%= film.releaseDate %>">
                    <input type="hidden" name="<%= runtimeName %>" value="<%= film.runtime %>">
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </form>
      </div>
    </div>

    
